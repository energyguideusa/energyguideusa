---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Professional solar panel and HVAC guides for homeowners across America">
</head>
<body class="flex flex-col min-h-screen" style="background: #ffffff;">
    <!-- HEADER -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo/Brand -->
                <a href="/" class="flex items-center">
                    <span class="text-2xl font-bold" style="color: #000000;">
                        Energy Guide
                    </span>
                </a>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-8">
                    <a href="/" class="font-medium transition" style="color: #404952;" onmouseover="this.style.color='#98c965'" onmouseout="this.style.color='#404952'">Home</a>
                    <a href="/#states" class="font-medium transition" style="color: #404952;" onmouseover="this.style.color='#98c965'" onmouseout="this.style.color='#404952'">States</a>
                    <a href="/#services" class="font-medium transition" style="color: #404952;" onmouseover="this.style.color='#98c965'" onmouseout="this.style.color='#404952'">Services</a>
                    <a href="#get-quotes" class="px-6 py-2.5 rounded-lg font-semibold shadow-md transition hover:opacity-90" style="background: #98c965; color: #ffffff !important;">
                        Get Free Quotes
                    </a>
                </div>

                <!-- Mobile Menu Button -->
                <button class="md:hidden" style="color: #404952;" id="mobile-menu-button">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>

            <!-- Mobile Navigation -->
            <div class="md:hidden hidden" id="mobile-menu">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="/" class="block px-3 py-2 rounded-md" style="color: #404952;">Home</a>
                    <a href="/#states" class="block px-3 py-2 rounded-md" style="color: #404952;">States</a>
                    <a href="/#services" class="block px-3 py-2 rounded-md" style="color: #404952;">Services</a>
                    <a href="#get-quotes" class="block px-3 py-2 rounded-md text-center" style="background: #98c965; color: #ffffff !important;">Get Free Quotes</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-grow">
        <slot />
    </main>

    <!-- FOOTER -->
    <footer class="text-white" style="background: #404952;">
        <!-- Main Footer Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Brand Column -->
                <div>
                    <h3 class="text-2xl font-bold mb-4" style="color: #98c965 !important;">
                        Energy Guide
                    </h3>
                    <p class="text-gray-300 mb-4">
                        Your trusted source for solar panel and HVAC information across America.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-300 hover:text-white transition">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                        </a>
                        <a href="#" class="text-gray-300 hover:text-white transition">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
                        </a>
                    </div>
                </div>

                <!-- Popular States -->
                <div>
                    <h4 class="font-bold text-lg mb-4" style="color: #ffffff !important;">Popular States</h4>
                    <ul class="space-y-2">
                        <li><a href="/california/" class="text-gray-300 hover:text-white transition">California Solar & HVAC</a></li>
                        <li><a href="/texas/" class="text-gray-300 hover:text-white transition">Texas Solar & HVAC</a></li>
                        <li><a href="/florida/" class="text-gray-300 hover:text-white transition">Florida Solar & HVAC</a></li>
                        <li><a href="/new-york/" class="text-gray-300 hover:text-white transition">New York Solar & HVAC</a></li>
                        <li><a href="/arizona/" class="text-gray-300 hover:text-white transition">Arizona Solar & HVAC</a></li>
                    </ul>
                </div>

                <!-- Services -->
                <div>
                    <h4 class="font-bold text-lg mb-4" style="color: #ffffff !important;">Services</h4>
                    <ul class="space-y-2">
                        <li><a href="/#solar" class="text-gray-300 hover:text-white transition">Solar Panel Guides</a></li>
                        <li><a href="/#hvac" class="text-gray-300 hover:text-white transition">HVAC System Guides</a></li>
                        <li><a href="/#incentives" class="text-gray-300 hover:text-white transition">Incentives & Rebates</a></li>
                       <li><a href="/solar-calculator/" class="text-gray-300 hover:text-white transition">Solar Calculator</a></li>
                        <li><a href="/#companies" class="text-gray-300 hover:text-white transition">Find Companies</a></li>
                    </ul>
                </div>

                <!-- Company -->
                <div>
                    <h4 class="font-bold text-lg mb-4" style="color: #ffffff !important;">Company</h4>
                    <ul class="space-y-2">
                        <li><a href="/about/" class="text-gray-300 hover:text-white transition">About Us</a></li>
                        <li><a href="/contact/" class="text-gray-300 hover:text-white transition">Contact</a></li>
                        <li><a href="/privacy/" class="text-gray-300 hover:text-white transition">Privacy Policy</a></li>
                        <li><a href="/terms/" class="text-gray-300 hover:text-white transition">Terms of Service</a></li>
                        <li><a href="https://energyguideusa.com/sitemap-0.xml" class="text-gray-300 hover:text-white transition">Sitemap</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div style="border-top: 1px solid rgba(255,255,255,0.1);">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                <div class="md:flex md:items-center md:justify-between">
                    <p class="text-gray-300 text-sm">
                        &copy; 2025 Energy Guide. All rights reserved.
                    </p>
                    <p class="text-gray-300 text-sm mt-2 md:mt-0">
                        Connecting homeowners with trusted solar and HVAC professionals nationwide.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Mobile Menu Script -->
    <script>
        document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
            const menu = document.getElementById('mobile-menu');
            menu?.classList.toggle('hidden');
        });
    </script>

    <!-- Global Styles -->
    <style is:global>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

        :root {
            --grey: #404952;
            --green: #98c965;
            --light-green: #eaeddd;
            --white: #ffffff;
            --black: #000000;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            color: var(--grey);
        }

        html {
            scroll-behavior: smooth;
        }

        /* Custom scrollbar - GREEN */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--green);
            border-radius: 5px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #7ab04d;
        }

        /* Headings - BLACK on light backgrounds */
        h1, h2, h3, h4, h5, h6 {
            font-weight: 700;
            letter-spacing: -0.02em;
            color: var(--black) !important;
        }

        /* Article headings - BLACK */
        article h2 {
            font-size: 1.875rem;
            font-weight: 700;
            margin-top: 2.5rem;
            margin-bottom: 1rem;
            color: var(--black) !important;
        }

        article h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 2rem;
            margin-bottom: 0.75rem;
            color: var(--black) !important;
        }

        article p {
            line-height: 1.75;
            color: var(--grey) !important;
        }

        /* ALL page titles on colored backgrounds = WHITE */
        section h1 {
            color: white !important;
        }

        /* Footer headings = WHITE */
        footer h3,
        footer h4 {
            color: white !important;
        }

        /* REPLACE ALL BLUE with GREEN */
        .bg-blue-100,
        .bg-blue-200,
        .bg-blue-300,
        .bg-blue-400,
        .bg-blue-500,
        .bg-blue-600,
        .bg-blue-700,
        .bg-blue-800,
        .bg-blue-900,
        section.bg-blue-600,
        section.bg-blue-700,
        section.bg-blue-800,
        [class*="bg-blue"],
        .py-16.bg-\\[\\#2562eb\\],
        [style*="background-color: #2562eb"],
        [style*="background: #2562eb"],
        [style*="background-color: rgb(37, 99, 235)"] {
            background: var(--green) !important;
        }

        /* REPLACE blue gradients with GREEN */
        [style*="background: linear-gradient"][style*="blue"],
        [style*="background: linear-gradient"][style*="2562eb"],
        [style*="background: linear-gradient"][style*="2563eb"] {
            background: var(--green) !important;
        }

        /* ALL text on GREEN backgrounds = WHITE */
        section.bg-\\[\\#2562eb\\] h1,
        section.bg-\\[\\#2562eb\\] p,
        section.bg-\\[\\#2562eb\\] span,
        [style*="background: #2562eb"] h1,
        [style*="background: #2562eb"] p,
        section[class*="bg-blue"] h1,
        section[class*="bg-blue"] p {
            color: white !important;
        }

        /* REPLACE blue text with GREEN */
        .text-blue-100,
        .text-blue-200,
        .text-blue-300,
        .text-blue-400,
        .text-blue-500,
        .text-blue-600,
        .text-blue-700,
        .text-blue-800,
        .text-blue-900,
        [class*="text-blue"],
        [style*="color: #2563eb"],
        [style*="color: rgb(37, 99, 235)"] {
            color: var(--green) !important;
        }

        /* REPLACE blue borders with GREEN */
        .border-blue-100,
        .border-blue-200,
        .border-blue-300,
        .border-blue-400,
        .border-blue-500,
        .border-blue-600,
        .border-blue-700,
        .border-blue-800,
        .border-blue-900,
        [class*="border-blue"] {
            border-color: var(--green) !important;
        }

        /* Breadcrumbs - GREEN links */
        .bg-gray-100 a {
            color: var(--green) !important;
        }

        /* Buttons - GREEN background, WHITE text */
        button,
        [type="submit"],
        .btn-primary,
        a[style*="background: #98c965"],
        a[href="#get-quotes"] {
            background: var(--green) !important;
            color: #ffffff !important;
            border-color: var(--green) !important;
        }

        button:hover,
        [type="submit"]:hover,
        a[href="#get-quotes"]:hover {
            opacity: 0.9;
            color: #ffffff !important;
        }

        /* Light green backgrounds */
        .bg-gray-50 {
            background: var(--light-green) !important;
        }

        /* Tables */
        table th {
            background: var(--light-green) !important;
            color: var(--black) !important;
        }

        /* Prose links - GREEN */
        .prose a {
            color: var(--green) !important;
        }

        .prose strong {
            color: var(--black) !important;
        }

        /* REPLACE ALL hover blue with GREEN */
        .hover\:bg-blue-50:hover,
        .hover\:bg-blue-100:hover,
        .hover\:bg-blue-200:hover,
        .hover\:bg-blue-300:hover,
        .hover\:bg-blue-400:hover,
        .hover\:bg-blue-500:hover,
        .hover\:bg-blue-600:hover,
        .hover\:bg-blue-700:hover,
        .hover\:bg-blue-800:hover,
        .hover\:bg-blue-900:hover {
            background: var(--green) !important;
        }

        .hover\:text-blue-50:hover,
        .hover\:text-blue-100:hover,
        .hover\:text-blue-200:hover,
        .hover\:text-blue-300:hover,
        .hover\:text-blue-400:hover,
        .hover\:text-blue-500:hover,
        .hover\:text-blue-600:hover,
        .hover\:text-blue-700:hover,
        .hover\:text-blue-800:hover,
        .hover\:text-blue-900:hover {
            color: var(--green) !important;
        }

        .hover\:border-blue-50:hover,
        .hover\:border-blue-100:hover,
        .hover\:border-blue-200:hover,
        .hover\:border-blue-300:hover,
        .hover\:border-blue-400:hover,
        .hover\:border-blue-500:hover,
        .hover\:border-blue-600:hover,
        .hover\:border-blue-700:hover,
        .hover\:border-blue-800:hover,
        .hover\:border-blue-900:hover {
            border-color: var(--green) !important;
        }

        /* Form inputs - GREEN border */
        input[type="text"],
        input[type="email"],
        input[type="tel"],
        textarea,
        select {
            border-color: var(--green) !important;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="tel"]:focus,
        textarea:focus,
        select:focus {
            border-color: var(--green) !important;
            outline: none;
            box-shadow: 0 0 0 3px rgba(152, 201, 101, 0.1);
        }

        /* Cards - GREEN borders */
        .bg-white.border-2,
        .border-2 {
            border-color: var(--green) !important;
        }

        /* Group hover - GREEN */
        .group:hover .text-blue-600,
        .group:hover .text-blue-700,
        .group:hover [class*="text-blue"] {
            color: var(--green) !important;
        }

        /* Stat boxes */
        .bg-white\/10 {
            background: rgba(255, 255, 255, 0.1) !important;
        }
    </style>
</body>
</html>