---
import Layout from '../layouts/Layout.astro';
import LeadForm from '../components/LeadForm.astro';
---

<Layout title="Energy Guide - Solar Panel & HVAC Guides for Every State">
  <!-- HERO SECTION -->
  <section class="relative bg-gradient-to-br from-blue-600 via-blue-700 to-blue-900 text-white overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="text-center">
        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full mb-6">
          <span class="text-sm font-medium">üåü Trusted by thousands of homeowners nationwide</span>
        </div>
        
        <!-- Main Heading -->
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
          Find The Best Solar & HVAC<br/>
          <span class="bg-gradient-to-r from-green-400 to-blue-300 bg-clip-text text-transparent">
            Solutions For Your Home
          </span>
        </h1>
        
        <!-- Subheading -->
        <p class="text-xl md:text-2xl text-blue-100 mb-10 max-w-3xl mx-auto">
          Comprehensive guides, cost breakdowns, and vetted contractors in all 50 states. Save thousands on your energy bills.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a href="#states" class="bg-white text-blue-600 px-8 py-4 rounded-full font-bold text-lg hover:bg-gray-100 transition shadow-xl hover:shadow-2xl transform hover:-translate-y-1">
            Explore Your State
          </a>
          <a href="#get-quotes" class="bg-green-500 text-white px-8 py-4 rounded-full font-bold text-lg hover:bg-green-600 transition shadow-xl hover:shadow-2xl transform hover:-translate-y-1">
            Get Free Quotes
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
            <div class="text-3xl font-bold mb-1">522</div>
            <div class="text-sm text-blue-200">Comprehensive Guides</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
            <div class="text-3xl font-bold mb-1">50</div>
            <div class="text-sm text-blue-200">States Covered</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
            <div class="text-3xl font-bold mb-1">100%</div>
            <div class="text-sm text-blue-200">Free Information</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
            <div class="text-3xl font-bold mb-1">2025</div>
            <div class="text-sm text-blue-200">Up-to-Date Data</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Wave Divider -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- SERVICES SECTION -->
  <section id="services" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">What We Cover</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Everything you need to know about solar panels and HVAC systems
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 mb-12">
